<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textParent">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:color">@color/colorText</item>
    </style>

    <style name="textHeadline" parent="textParent">
        <item name="android:textSize">@dimen/textSize_textStyles_headlineSize</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="textTitle" parent="textParent">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize_textStyles_titleSize</item>
    </style>

    <style name="textRegular" parent="textParent">
        <item name="android:textSize">@dimen/textSize_textStyles_regularSize</item>
    </style>

    <style name="textSubtitle" parent="textParent">
        <item name="android:textSize">@dimen/textSize_textStyles_subtitleSize</item>
    </style>

    <style name="textTempValue" parent="textParent">
        <item name="android:textSize">@dimen/textSize_textStyles_tempValueSize</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">0</item>
    </style>


</resources>